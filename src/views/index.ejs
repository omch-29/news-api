<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <form action="/search">
        <input name="q" placeholder="Search news">
        <button>Search</button>
    </form>
    <% if(error){ %>
        <p style="color:red;"><%= error %></p>
    <%}%>
    <% articles.forEach((a,i) => { %>
        <div>
            <h3><%= a.title %></h3>
            <p><%= a.description %></p>
            <a href="/details/<%= Buffer.from(JSON.stringify(a)).toString('base64') %>">View Details</a>
            <hr>
        </div>
    <%}) %>
</body>
</html>